{
  "name": "iris-example",
  "title": "An example data package with the iris data set",
  "description" : "A description\n\nThe second paragraph of the description",
  "resources" : [
    {
      "name": "iris",
      "path": "iris.csv",
      "title": "The iris data set",
      "description": "A description of the iris data set\n\nContains properties of irises",
      "format": "csv",
      "mediatype": "text/csv",
      "encoding": "utf-8"
    }, {
      "name": "complex",
      "path": "complex.csv",
      "title": "A complex example dataset",
      "description": "An example dataset with columns of various types and non-standard CSV-format",
      "format": "csv",
      "mediatype": "text/csv",
      "encoding": "utf-8",
      "schema": {
        "fields" : [ 
          {
            "name" : "string1",
            "type" : "string"
          }, {
            "name" : "integer1",
            "type" : "integer"
          }, {
            "name" : "boolean1",
            "type" : "boolean"
          }, {
            "name" : "number1",
            "type" : "number"
          }, {
            "name" : "number2",
            "type" : "number",
            "decimalChar" : "$",
            "groupChar" : " "
          }, {
            "name" : "boolean2",
            "type" : "boolean",
            "trueValues" : ["TRUE"],
            "falseValues" : ["FALSE"]
          }, {
            "name" : "date1",
            "type" : "date"
          }, {
            "name" : "factor1",
            "type" : "integer",
            "categories" : [
              {"value": 1, "label": "Female"},
              {"value": 2, "label": "Male"},
              {"value": 3, "label": "Other"},
              {"value": 0, "label": "Not given"}
            ]
          }
        ]
      }
    }, {
      "name": "inline",
      "title": "An inline data set",
      "description": "A description of the inline set",
      "data": [
        {"field1": 10, "field2": "20"},
        {"field1": 20, "field2": "21"},
        {"field1": 30, "field2": "22"}
      ]
    }, {
      "name": "fixed-width",
      "path": "fixedwidth.asc",
      "title": "A Fixed Width Example",
      "encoding": "UTF-8",
      "mediatype": "text/x-fixedwidth",
      "fwfspec": [
        {"name": "foo", "length": 1},
        {"name": "bar", "length": 5},
        {"name": "date", "length": 10},
        {"name": "name", "length": 8}
      ],
      "schema": {
        "fields" : [
          { 
            "name": "foo",
            "type": "integer"
          }, {
            "name": "bar",
            "type": "number",
            "decimalChar": "."
          }, {
            "name": "date",
            "type": "date"
          }, {
            "name": "name",
            "type": "string"
          }
        ]
      }
    }
  ]
}

